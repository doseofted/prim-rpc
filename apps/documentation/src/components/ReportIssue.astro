---
import { Icon } from "astro-icon/components"
import queryString from "query-string"

interface Props {
	type?: string
	title: string
	href: string
}
const { type = "Documentation", title, href } = Astro.props

const reportIssueUrl = [
	"https://github.com/doseofted/prim-rpc/issues/new",
	queryString.stringify({
		title: `${type} Issue: ${title}`,
		body: `**Link**: [${href}](${href})\n\n**What's happening:**\n\n`,
	}),
].join("?")
---

<a
	href={reportIssueUrl}
	class="mt-6 text-sm underline-offset-4 underline decoration-dotted hover:decoration-solid flex items-center gap-2 opacity-60"
	target="_blank">
	<Icon name="ph:git-branch-bold" class="w-4 h-4" />
	<span>Report an Issue</span>
</a>
