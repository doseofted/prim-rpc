---
import Collapse from "./Collapse.astro"
import DataListItem from "./DataListItem.astro"

interface Props {
	title?: string
	data?: Record<string, string>
}
const { title = "Data", data } = Astro.props

const contentsGiven = Astro.slots.has("default")
---

<Collapse title={title} checked>
	<ul class="grid grid-cols-3 gap-6 py-4">
		{
			contentsGiven ? (
				<slot />
			) : (
				Object.entries(data ?? {}).map(([key, value]) => <DataListItem key={key} value={value} />)
			)
		}
	</ul>
</Collapse>
