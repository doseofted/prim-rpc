---
import Documentation from "@/layouts/Documentation.astro"
import { getCollection } from "astro:content"
import TableOfContents from "@/components/TableOfContents.astro"
import { type CollectionType } from "@/utils/table-of-contents"

interface Props {
	entry: CollectionType
}
export async function getStaticPaths() {
	const documentation = await getCollection("api")
	return documentation.map(entry => {
		const { slug } = entry
		const params = { slug }
		const props = { entry }
		return { params, props }
	})
}

const { entry } = Astro.props
const { Content, headings } = await entry.render()
---

<Documentation decorationText="The Docs." title={entry.data.title}>
	<Content />
	<TableOfContents headings={headings} slot="extra" />
</Documentation>
