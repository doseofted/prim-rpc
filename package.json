{
	"name": "prim",
	"private": true,
	"author": {
		"name": "Ted Klingenberg",
		"email": "ted@doseofted.com",
		"url": "https://doseofted.com/"
	},
	"scripts": {
		"compose": "zx misc/zx-compose.mjs",
		"compose:development": "docker compose -f docker-compose.yml -f docker-compose.dev.yml",
		"compose:production": "docker compose -f docker-compose.yml -f misc/logging.yml -f docker-compose.prod.yml",
		"libraries:dev": "parcel watch 'libraries/packages/*'",
		"libraries:build": "parcel build 'libraries/packages/*'",
		"frontend": "pnpm --filter='frontend'",
		"backend": "pnpm --filter='backend'"
	},
	"packageManager": "pnpm@6.26.1",
	"devDependencies": {
		"@parcel/core": "^2.2.1",
		"@parcel/packager-ts": "^2.2.1",
		"@parcel/transformer-typescript-types": "^2.2.1",
		"@parcel/transformer-yaml": "^2.2.1",
		"@typescript-eslint/eslint-plugin": "^5.10.0",
		"@typescript-eslint/parser": "^5.10.0",
		"eslint": "^8.7.0",
		"parcel": "^2.2.1",
		"postcss": "^8.4.5",
		"typescript": "^4.5.4",
		"zx": "^4.3.0"
	}
}
