{
	"name": "Ubuntu",
	"image": "mcr.microsoft.com/devcontainers/base:noble",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "22",
			"nvmVersion": "latest"
		}
	},
	"workspaceFolder": "/home/vscode/${localWorkspaceFolderBasename}",
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/${localWorkspaceFolderBasename},type=bind",
	"mounts": [
		"source=released_prim_rpc_root_node_modules,target=/home/vscode/${localWorkspaceFolderBasename}/node_modules,type=volume",
		"source=released_prim_rpc_libs_rpc_node_modules,target=/home/vscode/${localWorkspaceFolderBasename}/libs/rpc/node_modules,type=volume",
		"source=released_prim_rpc_libs_plugins_node_modules,target=/home/vscode/${localWorkspaceFolderBasename}/libs/plugins/node_modules,type=volume",
		"source=released_prim_rpc_libs_example_node_modules,target=/home/vscode/${localWorkspaceFolderBasename}/libs/example/node_modules,type=volume",
		"source=released_prim_rpc_libs_tooling_node_modules,target=/home/vscode/${localWorkspaceFolderBasename}/libs/tooling/node_modules,type=volume",
		"source=released_prim_rpc_apps_documentation_node_modules,target=/home/vscode/${localWorkspaceFolderBasename}/apps/documentation/node_modules,type=volume",
		"source=released_prim_rpc_apps_example_node_modules,target=/home/vscode/${localWorkspaceFolderBasename}/apps/example/node_modules,type=volume"
	],
	"postCreateCommand": "pnpm config set store-dir /home/vscode/.pnpm-store && find /home/vscode/${localWorkspaceFolderBasename} -name \"node_modules\" -type d -exec sudo chown -R $USER:$USER {} \\; && pnpm install --frozen-lockfile && (echo 'alias task=\"pnpm start\"' >> /home/vscode/.bashrc)",
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.vscode-yaml",
				"streetsidesoftware.code-spell-checker",
				"vitest.explorer",
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"astro-build.astro-vscode"
			]
		}
	}
}
