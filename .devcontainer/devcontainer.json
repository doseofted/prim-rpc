{
	"name": "Ubuntu",
	"image": "mcr.microsoft.com/devcontainers/base:noble",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "24",
			"nvmVersion": "latest"
		}
	},
	"workspaceFolder": "/home/vscode/${localWorkspaceFolderBasename}",
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/${localWorkspaceFolderBasename},type=bind",
	"mounts": [
		"source=prim_rpc_root_node_modules,target=/home/vscode/${localWorkspaceFolderBasename}/node_modules,type=volume",
		"source=prim_rpc_libs_rpc_node_modules,target=/home/vscode/${localWorkspaceFolderBasename}/libs/rpc/node_modules,type=volume"
	],
	"postCreateCommand": "pnpm config set store-dir /home/vscode/.pnpm-store && find /home/vscode/${localWorkspaceFolderBasename} -name \"node_modules\" -type d -exec sudo chown -R $USER:$USER {} \\; && pnpm install --frozen-lockfile && (echo 'alias task=\"pnpm start\"' >> /home/vscode/.bashrc)",
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.vscode-yaml",
				"TypeScriptTeam.native-preview",
				"biomejs.biome"
			]
		}
	}
}
