{
  "name": "@doseofted/prim-ui",
  "version": "0.0.1",
  "description": "UI components for Prim documentation",
  "license": "UNLICENSED",
  "author": {
    "name": "Ted Klingenberg",
    "email": "ted@doseofted.com",
    "url": "https://doseofted.com/"
  },
  "scripts": {
    "build": "vite build",
    "watch": "vite build --watch",
    "check": "tsc --noEmit",
    "dev": "vite",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint-style": "stylelint '**/*.{css,scss}'",
    "test": "vitest run",
    "testing": "vitest watch"
  },
  "devDependencies": {
    "@doseofted/prim-docs": "workspace:*",
    "@doseofted/prim-example": "workspace:*",
    "@solidjs/router": "^0.5.0",
    "@tweakpane/core": "^1.1.0",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.11.9",
    "@unocss/reset": "^0.46.2",
    "lodash-es": "^4.17.21",
    "solid-js": "^1.6.1",
    "solid-styled-components": "^0.28.5",
    "solid-testing-library": "^0.3.0",
    "typescript": "^4.8.4",
    "unocss": "^0.46.2",
    "vite": "^3.2.2",
    "vite-plugin-dts": "^1.6.6",
    "vite-plugin-pages": "^0.27.1",
    "vite-plugin-solid": "^2.3.10"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/lib.umd.cjs",
  "module": "./dist/lib.es.mjs",
  "types": "./dist/index.lib.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.lib.d.ts",
      "import": "./dist/lib.es.mjs",
      "require": "./dist/lib.umd.cjs"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    },
    "./package.json": "./package.json"
  }
}