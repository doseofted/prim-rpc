{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "types": [
      "vite/client",
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@react/*": ["./src/generated/react/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "vite.config.ts",
    "generated/**/*"
, "src/index.react.ts"  ],
  "exclude": ["src/**/*.lite.tsx"],
  "references": [{ "path": "./tsconfig.mitosis.json" }]
}
