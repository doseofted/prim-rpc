{
	"include": ["src"],
	"exclude": ["src/**/*.test.ts"],
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"types": ["vite/client"],
		"jsx": "react-jsx"
	},
	"references": [
		{ "path": "./tsconfig.vite.json" },
		{ "path": "./tsconfig.react.json" },
		{ "path": "./tsconfig.vue.json" }
	]
}
