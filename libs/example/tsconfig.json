{
	"compilerOptions": {
		"target": "ES2020",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"isolatedModules": true,
		"lib": ["DOM", "ES2020"],
		// https://github.com/microsoft/TypeScript/issues/54542#issuecomment-1594889906
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/*.test.ts"]
}
